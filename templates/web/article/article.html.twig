{% extends 'base.web.html.twig' %}
{% block title %}Article : {% endblock %}
{% block body %}
    <section>
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('app_home') }}" class="btn btn-danger btn_back">Retour</a>
            </div>
        </div>
        <div class="row">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top"
                                 src="{{ asset('uploads/'~article.cover) }}" width="100%"
                                 alt="Card image cap"/>
                            <div class="card-body">
                                <p class="card-text text-center title">
                                    {{ article.title }}
                                </p>
                                <p class="card-text">
                                    {{ article.content|raw }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}